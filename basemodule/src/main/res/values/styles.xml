<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Progress bar -->
    <style name="Dialog.ProgressBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button style -->
    <style name="AppTheme.Button.Default" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorButtonDefault</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_button_default</item>
        <item name="android:textSize">@dimen/text_size_sp_15</item>
    </style>

    <style name="TextView.Sound.Title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">42sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView.Delete.Info" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
